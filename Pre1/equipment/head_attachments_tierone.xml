<Equipment>
	<Bind eqp="HelmetACH">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="HelmetFAST">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="HelmetFASTMandible">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="HelmetFASTRF">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="HelmetIHPS">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="CapUndercover">
		<to name="DEVUndercover"/>
		<to name="DEVBlackOps"/>
	</Bind>

	<Bind eqp="CapBlackOps">
		<to name="DEVUndercover"/>
		<to name="DEVBlackOps"/>
	</Bind>

	<Bind eqp="HelmetBumpBlackOps">
		<to name="DEVBlackOps"/>
	</Bind>

	<Bind eqp="HelmetFASTBlackOps">
		<to name="DEVBlackOps"/>
	</Bind>

	<Bind eqp="SantaHat">
		<to name="Operator"/>
	</Bind>

	<Bind eqp="NVG">
		<to name="DEVUndercover"/>
		<to name="DEVBlackOps"/>
		<to name="Operator"/>
		<to name="DEVAssault"/>
		<to name="DEVSupport"/>
		<to name="DEVMarksman"/>
	</Bind>

	<Bind eqp="NVG_02">
		<to name="DEVUndercover"/>
		<to name="DEVBlackOps"/>
		<to name="Operator"/>
		<to name="DEVAssault"/>
		<to name="DEVSupport"/>
		<to name="DEVMarksman"/>
	</Bind>
	<HelmetNVG name="NVG_02" inventoryBinding="HelmetNVG" unlockCost="10"
			tooltip="@nvg_rangers_pvs31_name"
			description="@nvg_rangers_pvs31_desc"
			img="data/models/humans/attachments/nvg_02_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="-1"/>
		<ConcealmentModifier add="0" />

		<!-- fov params overwrite the base ones -->
		<ModifiableParams
			fovDegrees="70"
			fovRadiusMeters="0.42"
			fovRangeMeters="999"
		/>

		<!-- this is shown for daylight missions -->
		<RenderObject3D model="data/models/humans/attachments/nvg_02_up.khm" diffuseTex="data/models/humans/attachments/nvg_02.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>

		<!-- this is shown in night missions -->
		<RenderObject3D model="data/models/humans/attachments/nvg_02.khm" diffuseTex="data/models/humans/attachments/nvg_02.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>
		<RenderObject3D model="data/models/humans/attachments/nvg_02_lights.khm" diffuseTex="data/textures/fx/light_flare_01.dds" diffuseColor="91deff" blendMode="add" attachSlot="nvg">
		</RenderObject3D>
	</HelmetNVG>

	<Bind eqp="GPNVG_01">
		<to name="DEVAssault"/>
	</Bind>
	<HelmetNVG name="GPNVG_01" inventoryBinding="HelmetNVG" unlockCost="20"
			tooltip="@nvg_nswdg_gpnvg18_name"
			description="@nvg_nswdg_gpnvg18_desc"
			img="data/models/humans/attachments/gpnvg_ui.dds"
		>


		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="-3"/>
		<ConcealmentModifier add="0" />

		<!-- fov params overwrite the base ones -->
		<ModifiableParams
			fovDegrees="100"
			fovRadiusMeters="0.42"
			fovRangeMeters="999"
		/>

		<!-- this is shown for daylight missions -->
		<RenderObject3D model="data/models/humans/attachments/gpnvg_up.khm" diffuseTex="data/models/humans/attachments/gpnvg.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>

		<!-- this is shown in night missions -->
		<RenderObject3D model="data/models/humans/attachments/gpnvg.khm" diffuseTex="data/models/humans/attachments/gpnvg.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>
		<RenderObject3D model="data/models/humans/attachments/gpnvg_lights.khm" diffuseTex="data/textures/fx/light_flare_01.dds" diffuseColor="91deff" blendMode="add" attachSlot="nvg">
		</RenderObject3D>
	</HelmetNVG>

	<Bind eqp="GPNVG_02">
		<to name="Operator"/>
		<to name="BlackOps"/>
		<to name="DEVSupport"/>
		<to name="DEVMarksman"/>
		<to name="DEVBlackOps"/>
	</Bind>
	<HelmetNVG name="GPNVG_02" inventoryBinding="HelmetNVG" unlockCost="20"
			tooltip="@nvg_nswdg_gpnvg18_name"
			description="@nvg_nswdg_gpnvg18_desc"
			img="data/models/humans/attachments/gpnvg_ui.dds"
		>

		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="-3"/>
		<ConcealmentModifier add="0" />

		<!-- fov params overwrite the base ones -->
		<ModifiableParams
			fovDegrees="100"
			fovRadiusMeters="0.42"
			fovRangeMeters="999"
		/>

		<!-- this is shown for daylight missions -->
		<RenderObject3D model="data/models/humans/attachments/gpnvg_up_2.khm" diffuseTex="data/models/humans/attachments/gpnvg.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>

		<!-- this is shown in night missions -->
		<RenderObject3D model="data/models/humans/attachments/gpnvg_2.khm" diffuseTex="data/models/humans/attachments/gpnvg.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>
		<RenderObject3D model="data/models/humans/attachments/gpnvg_lights.khm" diffuseTex="data/textures/fx/light_flare_01.dds" diffuseColor="91deff" blendMode="add" attachSlot="nvg">
		</RenderObject3D>
	</HelmetNVG>
</Equipment>
